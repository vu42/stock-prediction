# Stock Prediction Backend - Environment Configuration
# Copy this file to .env and update values for your environment
# NOTE: Rename this file from 'env.example' to '.env'

# =============================================================================
# APPLICATION
# =============================================================================
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# =============================================================================
# DATABASE - PostgreSQL
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/stock_prediction

# =============================================================================
# REDIS - For RQ Task Queue
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS - Allowed Origins
# =============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# =============================================================================
# AIRFLOW INTEGRATION
# =============================================================================
AIRFLOW_BASE_URL=http://localhost:8080
AIRFLOW_USERNAME=admin
AIRFLOW_PASSWORD=admin

# =============================================================================
# AWS S3 / MINIO - Artifact Storage
# =============================================================================
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=stock-prediction-artifacts
S3_REGION=us-east-1

# =============================================================================
# EMAIL - SendGrid
# =============================================================================
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_SENDER=noreply@example.com
EMAIL_RECIPIENT=admin@example.com

# =============================================================================
# VN30 STOCK DATA
# =============================================================================
VNDIRECT_API_URL=https://api-finfo.vndirect.com.vn/v4/stock_prices
DATA_START_DATE=2000-01-01

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
SEQUENCE_LENGTH=60
FUTURE_DAYS=30
RANDOM_FOREST_ESTIMATORS=100
GRADIENT_BOOSTING_ESTIMATORS=100
SVR_C=1.0
RIDGE_ALPHA=1.0
CONTINUE_TRAINING=true

# =============================================================================
# OUTPUT PATHS
# =============================================================================
OUTPUT_DIR=output

